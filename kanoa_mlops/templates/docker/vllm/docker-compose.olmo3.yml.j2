services:
  vllm-olmo3:
{% if arch_config.platform_name == "jetson-thor" %}
    # Jetson Thor: Use pre-built NVIDIA image with sm_110 support
    image: {{ arch_config.vllm_image }}
{% else %}
    # x86_64 or Jetson Orin: Use official vLLM image
    image: vllm/vllm-openai:latest
{% endif %}
    container_name: kanoa-vllm-olmo3
    runtime: nvidia
    ports:
      - "8000:8000" # Standard vLLM port
    volumes:
      - ${HF_HOME:-~/.cache/huggingface}:/root/.cache/huggingface:rw
    environment:
      - CUDA_VISIBLE_DEVICES=0
      - HF_HOME=/root/.cache/huggingface
    command:
      - --model
      - ${MODEL_NAME:-allenai/Olmo-3-32B-Think}
      - --host
      - 0.0.0.0
      - --port
      - "8000"
      - --served-model-name
      - ${SERVED_MODEL_NAME:-allenai/Olmo-3-32B-Think}
      - --trust-remote-code
      - --max-model-len
      - "8192"
      - --max-num-seqs
      - "5"
      - --gpu-memory-utilization
      - "0.9"
      # Performance Tuning for {{ arch_config.description }}
      - --kv-cache-dtype
      - fp8
      - --enable-chunked-prefill
      # OLMo specific optimizations
      - --dtype
      - bfloat16
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: 1
              capabilities: [ gpu ]
    healthcheck:
      test: [ "CMD", "curl", "-f", "http://localhost:8000/health" ]
      interval: 30s
      timeout: 10s
