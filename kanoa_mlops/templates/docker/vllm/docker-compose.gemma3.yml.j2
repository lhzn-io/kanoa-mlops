services:
  vllm-gemma3:
{% if arch_config.platform_name == "jetson-thor" %}
    # Jetson Thor: Use pre-built NVIDIA image with sm_110 support
    image: {{ arch_config.vllm_image }}
{% else %}
    # x86_64 or Jetson Orin: Use official vLLM image
    image: vllm/vllm-openai:latest
{% endif %}
    container_name: kanoa-vllm-gemma3
    runtime: nvidia
    ports:
      - "8000:8000" # Standard vLLM port (use 8001:8000 if running alongside Molmo)
    volumes:
      - ${HF_HOME:-~/.cache/huggingface}:/root/.cache/huggingface:rw
    environment:
      - CUDA_VISIBLE_DEVICES=0
      - HF_HOME=/root/.cache/huggingface
      - HUGGINGFACE_HUB_CACHE=/root/.cache/huggingface/hub
      - TRANSFORMERS_CACHE=/root/.cache/huggingface
      - TRANSFORMERS_VERBOSITY=info
      - HF_HUB_VERBOSITY=info
      - HF_HUB_OFFLINE=${HF_HUB_OFFLINE:-0}
    command: >
      vllm serve
      --model ${MODEL_NAME:-google/gemma-3-12b-it}
      --host 0.0.0.0
      --port 8000
      --served-model-name ${SERVED_MODEL_NAME:-google/gemma-3-12b-it}
      --trust-remote-code
      --max-model-len 8192
      --max-num-seqs 5
      --gpu-memory-utilization 0.8
      --kv-cache-dtype fp8
      --enable-chunked-prefill
{% if arch_config.platform_name != "jetson-thor" %}
      --quantization bitsandbytes
      --load-format bitsandbytes
{% endif %}
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: 1
              capabilities: [ gpu ]
    healthcheck:
      test: [ "CMD", "curl", "-f", "http://localhost:8000/health" ]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s

networks:
  default:
    name: kanoa-mlops
