services:
  vllm-gemma3:
{% if arch_config.platform_name == "jetson-thor" %}
    # Jetson Thor: Use pre-built NVIDIA image with sm_110 support
    image: {{ arch_config.vllm_image }}
{% else %}
    # x86_64 or Jetson Orin: Use official vLLM image
    image: vllm/vllm-openai:latest
{% endif %}
    container_name: kanoa-vllm-gemma3
    runtime: nvidia
    ports:
      - "8000:8000" # Standard vLLM port (use 8001:8000 if running alongside Molmo)
    volumes:
      - ${HF_HOME:-~/.cache/huggingface}:/root/.cache/huggingface:rw
    environment:
      - CUDA_VISIBLE_DEVICES=0
      - HF_HOME=/root/.cache/huggingface
    command:
      - --model
      - ${MODEL_NAME:-google/gemma-3-12b-it}
      - --host
      - 0.0.0.0
      - --port
      - "8000"
      - --served-model-name
      - ${SERVED_MODEL_NAME:-google/gemma-3-12b-it}
      - --trust-remote-code
      - --max-model-len
      - "8192"
      - --max-num-seqs
      - "5" # Conservative limit for single-user local dev
      - --gpu-memory-utilization
      - "0.8" # Lowered to 0.8 to prevent hangs with concurrent clients
      # Performance Tuning for {{ arch_config.description }}
      - --kv-cache-dtype
      - fp8  # Reduces VRAM usage, increases context length
      - --enable-chunked-prefill
{% if arch_config.platform_name != "jetson-thor" %}
      # 4-bit quantization recommended for VRAM-constrained systems
      - --quantization
      - bitsandbytes
      - --load-format
      - bitsandbytes
{% endif %}
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: 1
              capabilities: [ gpu ]
    healthcheck:
      test: [ "CMD", "curl", "-f", "http://localhost:8000/health" ]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s
    restart: unless-stopped

networks:
  default:
    name: kanoa-mlops
