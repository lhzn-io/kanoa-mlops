services:
  vllm-llama-scout:
{% if arch_config.platform_name == "jetson-thor" %}
    # ⚠️ Thor Limitation: This config works but OOMs on 64GB without quantization
    # Thor vLLM image doesn't support bitsandbytes for Scout architecture
    # Recommended: Use Ollama with Q4 Scout instead:
    #   kanoa mlops serve ollama
    #   docker exec kanoa-ollama ollama pull ingu627/llama4-scout-q4:109b
    image: {{ arch_config.vllm_image }}
{% else %}
    # x86_64 or Jetson Orin: Use official vLLM image with quantization
    image: vllm/vllm-openai:v0.6.3.post1
{% endif %}
    container_name: kanoa-vllm-llama-scout
    runtime: nvidia
    ports:
      - "8000:8000" # Standard vLLM port
    volumes:
      - ${HF_HOME:-~/.cache/huggingface}:/root/.cache/huggingface:rw
    environment:
      - CUDA_VISIBLE_DEVICES=0
      - NVIDIA_VISIBLE_DEVICES=all
      - NVIDIA_DRIVER_CAPABILITIES=all
      - HF_HOME=/root/.cache/huggingface
      - HUGGINGFACE_HUB_CACHE=/root/.cache/huggingface/hub
      - TRANSFORMERS_CACHE=/root/.cache/huggingface
      - TRANSFORMERS_VERBOSITY=info
      - HF_HUB_VERBOSITY=info
      - HF_HUB_OFFLINE=${HF_HUB_OFFLINE:-0}
    command: >
      vllm serve
      --model ${MODEL_NAME:-meta-llama/Llama-4-Scout-17B-16E-Instruct}
      --host 0.0.0.0
      --port 8000
      --served-model-name ${SERVED_MODEL_NAME:-meta-llama/Llama-4-Scout-17B-16E-Instruct}
      --trust-remote-code
      --max-model-len 8192
      --max-num-seqs 2
      --gpu-memory-utilization 0.5
      --kv-cache-dtype fp8
      --enable-chunked-prefill
{% if arch_config.platform_name != "jetson-thor" %}
      --dtype bfloat16
      --quantization bitsandbytes
      --load-format bitsandbytes
{% endif %}
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: 1
              capabilities: [ gpu ]
    healthcheck:
      test: [ "CMD", "curl", "-f", "http://localhost:8000/health" ]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s

networks:
  default:
    name: kanoa-mlops
