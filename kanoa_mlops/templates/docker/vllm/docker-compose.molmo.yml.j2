services:
  vllm-molmo:
{% if arch_config.platform_name == "jetson-thor" %}
    # Jetson Thor: Use pre-built NVIDIA image with sm_110 support
    image: {{ arch_config.vllm_image }}
{% else %}
    # x86_64 or Jetson Orin: Build from Dockerfile
    build:
      context: .
      dockerfile: Dockerfile.molmo
    image: kanoa-vllm-molmo:latest
{% endif %}
    container_name: kanoa-vllm-molmo
    runtime: nvidia
    ports:
      - "8000:8000"
    volumes:
      - ${HF_HOME:-~/.cache/huggingface}:/root/.cache/huggingface:rw
    environment:
      - CUDA_VISIBLE_DEVICES=0
      - HF_HOME=/root/.cache/huggingface
      - TF_FORCE_GPU_ALLOW_GROWTH=true
      - TF_CPP_MIN_LOG_LEVEL=3
    command: >
      vllm serve
      --model ${MODEL_NAME:-allenai/Molmo-7B-D-0924}
      --host 0.0.0.0
      --port 8000
      --served-model-name ${SERVED_MODEL_NAME:-allenai/Molmo-7B-D-0924}
      --trust-remote-code
{% if arch_config.platform_name != "jetson-thor" %}
      --quantization bitsandbytes
      --load-format bitsandbytes
{% endif %}
      --max-num-seqs 5
      --gpu-memory-utilization 0.8
      --kv-cache-dtype fp8
      --enable-chunked-prefill
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: 1
              capabilities: [ gpu ]
    healthcheck:
      test: [ "CMD", "curl", "-f", "http://localhost:8000/health" ]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s
    restart: unless-stopped

networks:
  default:
    name: kanoa-mlops
