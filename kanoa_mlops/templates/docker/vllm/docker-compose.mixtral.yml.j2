services:
  vllm-mixtral:
{% if arch_config.platform_name == "jetson-thor" %}
    # Jetson Thor: Use pre-built NVIDIA image with Blackwell sm_110 support
    image: {{ arch_config.vllm_image }}
{% else %}
    # x86_64 or Jetson Orin: Use official vLLM image
    image: vllm/vllm-openai:v0.6.3.post1
{% endif %}
    container_name: kanoa-vllm-mixtral
    runtime: nvidia
    ports:
      - "8001:8000" # Different port to avoid conflict with other vLLM instance
    volumes:
      - ${HF_HOME:-~/.cache/huggingface}:/root/.cache/huggingface:rw
    environment:
      - CUDA_VISIBLE_DEVICES=0
      - NVIDIA_VISIBLE_DEVICES=all
      - NVIDIA_DRIVER_CAPABILITIES=all
      - HF_HOME=/root/.cache/huggingface
      - HUGGINGFACE_HUB_CACHE=/root/.cache/huggingface/hub
      - TRANSFORMERS_CACHE=/root/.cache/huggingface
      - TRANSFORMERS_VERBOSITY=info
      - HF_HUB_VERBOSITY=info
      - HF_HUB_OFFLINE=${HF_HUB_OFFLINE:-0}
    command: >
      vllm serve
      --model ${MODEL_NAME:-mistralai/Mixtral-8x7B-Instruct-v0.1}
      --host 0.0.0.0
      --port 8000
      --served-model-name ${SERVED_MODEL_NAME:-mistralai/Mixtral-8x7B-Instruct-v0.1}
      --trust-remote-code
      --max-model-len 32768
      --max-num-seqs 3
      --gpu-memory-utilization 0.7
      --kv-cache-dtype fp8
      --enable-chunked-prefill
{% if arch_config.platform_name != "jetson-thor" %}
      --dtype bfloat16
{% endif %}
      --tensor-parallel-size 1
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: 1
              capabilities: [ gpu ]
    healthcheck:
      test: [ "CMD", "curl", "-f", "http://localhost:8000/health" ]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s

networks:
  default:
    name: kanoa-mlops
